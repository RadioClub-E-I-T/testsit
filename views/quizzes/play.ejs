<div class="content">

    <div class="box">
      <div class="columns">
          <div class="column">
          <p class="subtitle is-2">
              Test Id: <%=testid%>
          </p>
          </div>
          <div class="column is-narrow">
          <a href="/tests/<%=subject%>"><%=subject%></a>
          </div>
      </div>
      <div class="columns">
          <div class="column">
              <p class="subtitle is-4">Descripci√≥n: <%=desc%></p>
          </div>
          <div class="column is-narrow">
              <span class="tag has-background-warning is-large">INTENTAR PREGUNTA</span>
          </div>
      </div>
    </div>

    <div class="columns">
        <div class="column">
            <form method="post" action="/quizzes/<%=quiz.id%>/check?_method=PUT">

                <div class="box">
                  <h3 class="subtitle is-4"><%=quiz.question%></h3>
                      <div class="control">
                        <% if(quiz.answer1){ %>
                        <p class="subtitle is-5"><label class="radio">
                          <input type="radio" name="answer" value="1">
                          <b>A.</b>  <%=quiz.answer1%>
                        </label></p>
                        <% } %>
                        <% if(quiz.answer2){ %>
                        <p class="subtitle is-5"><label class="radio">
                          <input type="radio" name="answer" value="2">
                          <b>B.</b>  <%=quiz.answer2%>
                        </label></p>
                        <% } %>
                        <% if(quiz.answer3){ %>
                        <p class="subtitle is-5"><label class="radio">
                          <input type="radio" name="answer" value="3">
                          <b>C.</b>  <%=quiz.answer3%>
                        </label></p>
                        <% } %>
                        <% if(quiz.answer4){ %>
                        <p class="subtitle is-5"><label class="radio">
                          <input type="radio" name="answer" value="4">
                          <b>D.</b>  <%=quiz.answer4%>
                        </label></p>
                        <% } %>
                        <br>
                        <p class="subtitle is-5"><label class="radio">
                          <input type="radio" name="answer" value="0" checked>
                          <b>Omitir</b>
                        </label></p>
                      </div>
                  <br>
                </div>

                <input type="submit" class="button is-success" value="Check">
                <a href="/goback" class="button is-info">Go Back</a>

            </form>
        </div>
    </div>
</div>
